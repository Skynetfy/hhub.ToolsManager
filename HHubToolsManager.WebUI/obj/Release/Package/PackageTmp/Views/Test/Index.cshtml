@{
    Layout = null;
}
<form class="form-horizontal" action="@Url.Action("AddUser","User")" method="POST" data-ajax="true" data-ajax-method="Post" data-ajax-loading="#count-loadingid" data-ajax-mode="replace" data-ajax-success="addSuccess">
    <input type="hidden" name="uid" id="adduserrolehidn">
    <div class="form-group">
        <label class="col-sm-2 control-label">角色列表</label>
        <div class="col-sm-10">
            <ul id="treeData" class="ztree"></ul>
            <input type="hidden" name="roleids" id="adduserroleids">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>
<button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target=".bs-example-modal-lg"  onclick="addUserRoleClick(this)">分配角色</button>
<div class="modal fade bs-example-modal-lg" role="dialog" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="gridSystemModalLabel">Modules List</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" action="@Url.Action("AddUser","User")" method="POST" data-ajax="true" data-ajax-method="Post" data-ajax-loading="#count-loadingid" data-ajax-mode="replace" data-ajax-success="addSuccess">
                    <input type="hidden" name="uid" id="adduserrolehidn">
